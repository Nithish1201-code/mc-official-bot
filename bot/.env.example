# Discord bot environment variables
NODE_ENV=production
DISCORD_BOT_TOKEN=<your-discord-bot-token>
DISCORD_APPLICATION_ID=<your-application-id>
DISCORD_PUBLIC_KEY=<your-public-key>

# Backend connection
BACKEND_URL=http://localhost:3000
BACKEND_API_KEY=<same-as-backend>

# Permissions (comma-separated role IDs allowed to run sensitive commands)
BOT_ADMIN_ROLE_IDS=

# Alerts
BOT_ALERT_CHANNEL_ID=
BOT_STATUS_POLL_SECONDS=60
BOT_AUTO_RESTART_ON_DOWN=false

# Logging
LOG_LEVEL=info
