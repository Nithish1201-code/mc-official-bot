# Shared environment variables for backend and bot
NODE_ENV=production
PORT=3000
API_KEY=<generated-by-setup.sh>
LOG_LEVEL=info
LOG_FORMAT=json

# Crafty + server
MINECRAFT_PATH=/opt/minecraft
CRAFTY_PATH=/opt/crafty
CRAFTY_API_URL=https://localhost:8443
CRAFTY_API_TOKEN=<crafty-api-token>
CRAFTY_SERVER_ID=<crafty-server-id>
CRAFTY_ALLOW_INSECURE=true
SERVER_LOADER=paper
MINECRAFT_VERSION=1.21.1

# Discord bot
DISCORD_BOT_TOKEN=<your-discord-bot-token>
DISCORD_APPLICATION_ID=<your-application-id>
BACKEND_URL=http://localhost:3000
BACKEND_API_KEY=<same-as-api-key>
BOT_ADMIN_ROLE_IDS=
BOT_ALERT_CHANNEL_ID=
BOT_STATUS_POLL_SECONDS=60
BOT_AUTO_RESTART_ON_DOWN=false
